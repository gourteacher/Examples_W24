<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.cst3104.samples.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.cst3104.samples.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" >
        <action
            android:id="@+id/action_blankFragment_to_superFragment"
            app:destination="@id/superFragment" />
    </fragment>
    <fragment
        android:id="@+id/superFragment"
        android:name="com.cst3104.samples.SuperFragment"
        android:label="fragment_super"
        tools:layout="@layout/fragment_super" >
        <action
            android:id="@+id/action_superFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>